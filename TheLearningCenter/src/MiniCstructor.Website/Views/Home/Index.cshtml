@{
    ViewData["Title"] = "Home Page";
}
<div class="jumbotron">
    <h1>The Learning Center</h1>
    <h4>@ViewData["Message"]</h4>
    <input type="submit" value="Learn more >>" class="btn btn-info" />
</div>

<div class="row">
    <div class="col-md-4">
        <h2><a asp-action="classlist" asp-route-id="">Class List</a></h2>
        <p>See all our class offerings.</p>
    </div>
    <div class="col-md-4">
        <h2><a asp-action="yourclasses" asp-route-id="">Your enrolled classes</a></h2>
        <p>See the classes you are enrolled in.</p>
    </div>
    <div class="col-md-4">
        <h2><a asp-action="enroll" asp-route-id="">Enroll in a class</a></h2>
        <p>Take a new class.</p>
    </div>
</div>